

@model SettingsLogoDto

@{
    ViewData["Title"] = $"  ویرایش  لوگو  ✨ {Model.Settings_title_Logo} ";
}


<div class="row justify-content-center">

    <div class="col-xl-10">

        <div class="row">
            <div class="col-xl-1">
            </div>
            <div class="col-xl-10">


                <div class="d-flex align-items-center mb-3">
                    <div>

                        <h1 class="page-header mb-0">@ViewData["Title"]</h1>
                    </div>
                    <div class="ms-auto">
                        <a asp-action="Index" class="btn btn-outline-danger">
                            بازگشت
                            <i class="fa fa-fast-backward fa-fw me-1"></i>

                        </a>
                    </div>
                </div>
                <br />
                <div id="formControls" class="mb-5">

                    <div class="card">
                        <div class="card-body pb-2">
                            <form asp-action="Edit" method="post" class="was-validated" enctype="multipart/form-data">
                                <input hidden asp-for="Id" />
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                <div class="row">
                                    <div class="col-xl-12">

                                        <div class="form-group">
                                            <input hidden value="@ViewBag.Settings_Image_Logo" name="_Settings_Image_Logo" />
                                            <img src="@ViewBag.Settings_Image_Logo" width="150" height="150" />
                                            <label asp-for="Settings_Image_Logo" class="control-label"></label>
                                            <input asp-for="Settings_Image_Logo" class="form-control" />
                                            <span asp-validation-for="Settings_Image_Logo" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <input hidden value="@ViewBag.Settings_Image_Logo_Footer" name="_Settings_Image_Logo_Footer" />
                                            <img src="@ViewBag.Settings_Image_Logo_Footer" width="150" height="150" />
                                            <label asp-for="Settings_Image_Logo_Footer" class="control-label"></label>
                                            <input asp-for="Settings_Image_Logo_Footer" class="form-control" />
                                            <span asp-validation-for="Settings_Image_Logo_Footer" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="Settings_alt_Logo" class="control-label"></label>
                                            <input asp-for="Settings_alt_Logo" class="form-control" />
                                            <span asp-validation-for="Settings_alt_Logo" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="Settings_title_Logo" class="control-label"></label>
                                            <input asp-for="Settings_title_Logo" class="form-control" />
                                            <span asp-validation-for="Settings_title_Logo" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="Settings_Icon_Path" class="control-label"></label>
                                            <input asp-for="Settings_Icon_Path" class="form-control" />
                                            <span asp-validation-for="Settings_Icon_Path" class="text-danger"></span>
                                        </div>
                                  

                                    </div>


                                </div>




                                <div class="row">
                                    <button type="submit" class="btn btn-lg btn-outline-indigo">
                                        <i class="fa fa-plus-square fa-fw me-1"></i>

                                        ویرایش تغییرات
                                    </button>
                                </div>
                            </form>

                        </div>
                        <div class="card-arrow">
                            <div class="card-arrow-top-left"></div>
                            <div class="card-arrow-top-right"></div>
                            <div class="card-arrow-bottom-left"></div>
                            <div class="card-arrow-bottom-right"></div>
                        </div>
                    </div>
                </div>




            </div>

            <div class="col-xl-1">
            </div>

        </div>

    </div>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
