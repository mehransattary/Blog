

@model SettingsDto

@{
    ViewData["Title"] = $"  ویرایش  تنظیم عمومی  ✨ {Model.Settings_Sitename} ";
}


<div class="row justify-content-center">

    <div class="col-xl-10">

        <div class="row">
            <div class="col-xl-1">
            </div>
            <div class="col-xl-10">


                <div class="d-flex align-items-center mb-3">
                    <div>

                        <h1 class="page-header mb-0">@ViewData["Title"]</h1>
                    </div>
                    <div class="ms-auto">
                        <a asp-action="Index" class="btn btn-outline-danger">
                            بازگشت
                            <i class="fa fa-fast-backward fa-fw me-1"></i>

                        </a>
                    </div>
                </div>
                <br />
                <div id="formControls" class="mb-5">

                    <div class="card">
                        <div class="card-body pb-2">
                            <form asp-action="Edit" method="post" class="was-validated" enctype="multipart/form-data">
                                <input hidden asp-for="Id" />
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                <div class="row">
                                    <div class="col-xl-12">


                                        <div class="form-group">
                                            <label asp-for="Settings_Sitename" class="control-label"></label>
                                            <input asp-for="Settings_Sitename" class="form-control" />
                                            <span asp-validation-for="Settings_Sitename" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="Settings_Questions" class="control-label"></label>
                                            <textarea asp-for="Settings_Questions" class="form-control"></textarea>
                                            <span asp-validation-for="Settings_Questions" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="Settings_HelperSell" class="control-label"></label>
                                            <textarea asp-for="Settings_HelperSell" class="form-control"></textarea>
                                            <span asp-validation-for="Settings_HelperSell" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="Settings_Address" class="control-label"></label>
                                            <textarea asp-for="Settings_Address" class="form-control"></textarea>
                                            <span asp-validation-for="Settings_Address" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="Settings_Tell" class="control-label"></label>
                                            <input asp-for="Settings_Tell" class="form-control" />
                                            <span asp-validation-for="Settings_Tell" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="Settings_Mobile" class="control-label"></label>
                                            <input asp-for="Settings_Mobile" class="form-control" />
                                            <span asp-validation-for="Settings_Mobile" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="Settings_Email" class="control-label"></label>
                                            <input asp-for="Settings_Email" class="form-control" />
                                            <span asp-validation-for="Settings_Email" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <input hidden value="@ViewBag.Settings_ImageFooter" name="_Settings_ImageFooter" />
                                            <img src="@ViewBag.Settings_ImageFooter" width="150" height="150" />
                                            <label asp-for="Settings_ImageFooter" class="control-label"></label>
                                            <input asp-for="Settings_ImageFooter" class="form-control" />
                                            <span asp-validation-for="Settings_ImageFooter" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <input hidden value="@ViewBag.Settings_ImageTopMain" name="_Settings_ImageTopMain" />
                                            <img src="@ViewBag.Settings_ImageTopMain" width="150" height="150" />
                                            <label asp-for="Settings_ImageTopMain" class="control-label"></label>
                                            <input asp-for="Settings_ImageTopMain" class="form-control" />
                                            <span asp-validation-for="Settings_ImageTopMain" class="text-danger"></span>
                                        </div>
                                    </div>


                                </div>




                                <div class="row">
                                    <button type="submit" class="btn btn-lg btn-outline-indigo">
                                        <i class="fa fa-plus-square fa-fw me-1"></i>

                                        ویرایش تغییرات
                                    </button>
                                </div>
                            </form>

                        </div>
                        <div class="card-arrow">
                            <div class="card-arrow-top-left"></div>
                            <div class="card-arrow-top-right"></div>
                            <div class="card-arrow-bottom-left"></div>
                            <div class="card-arrow-bottom-right"></div>
                        </div>
                    </div>
                </div>




            </div>

            <div class="col-xl-1">
            </div>

        </div>

    </div>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
