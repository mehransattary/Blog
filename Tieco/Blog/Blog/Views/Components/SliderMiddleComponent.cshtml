
@model IEnumerable<WebLog_Slider>
@{ 
    var Slider1 = ViewData["Slider1"] as WebLog_Slider;
    var Slider2 = ViewData["Slider2"] as WebLog_Slider;
    var Slider3 = ViewData["Slider3"] as WebLog_Slider;
}
<div class="axil-post-grid-area axil-section-gap bg-color-grey">
    <div class="container">

        <div class="row">
            <div class="col-lg-12">
                <div class="section-title text-right">
                    <h3 class="title">مطالب برگزیده</h3>
                </div>
            </div>
            <div class="col-lg-12">
           
                <!-- Start Tab Content  -->
                <div class="grid-tab-content tab-content mt--10">

                    <!-- Start Single Tab Content  -->
                    <div class="single-post-grid tab-pane fade show active" id="gridone" role="tabpanel">
                        <div class="row">
                            <div class="col-xl-7 col-lg-7 col-md-12 col-12">

                                <!-- Start Post Grid  -->
                                <div class="content-block post-grid post-grid-large mt--30">
                                    <div class="post-thumbnail">
                                        <a href="post-details.html">
                                            <img src="@Slider1.WebLog_Slider_Image" alt="@Slider1.WebLog_Slider_Title" title="@Slider1.WebLog_Slider_Title">
                                        </a>
                                    </div>
                                    @if (Slider1.WebLog_Slider_Blog_IsActive)
                                    {
                                        <div class="post-grid-content">
                                            <div class="post-content">
                                                <div class="post-cat">
                                                    <div class="post-cat-list">
                                                        <a class="hover-flip-item-wrapper" href="@Slider1.webLog.WebLog_Groups.Url_Meta" title="@Slider1.webLog.WebLog_Groups.WebLog_Group_Title_One">
                                                            <span class="hover-flip-item">
                                                                <span data-text="@Slider1.webLog.Title_Meta">@Slider1.webLog.WebLog_Groups.Title_Meta</span>
                                                            </span>
                                                        </a>
                                                    </div>
                                                </div>
                                                <h3 class="title"><a href="@Slider1.webLog.Url_Meta">@Slider1.webLog.Title_Meta</a></h3>
                                                <div class="post-meta-wrapper">
                                                    <div class="post-meta">

                                                        <div class="content">
                                                            <h6 class="post-author-name">
                                                                <a class="hover-flip-item-wrapper" href="@Slider1.webLog.Url_Meta">
                                                                    <span class="hover-flip-item">
                                                                        <span data-text="@Slider1.webLog.Weblog_Writer">@Slider1.webLog.Weblog_Writer</span>
                                                                    </span>
                                                                </a>
                                                            </h6>
                                                            <ul class="post-meta-list">
                                                                <li>@Slider1.webLog.LastUpdateDate.ToShamsi()</li>
                                                            </ul>
                                                        </div>
                                                    </div>

                                                </div>
                                            </div>
                                        </div>
                                    }
                                    else if (Slider1.WebLog_Slider_Label_IsActive)
                                    {
                                        <div class="post-grid-content">
                                            <div class="post-content">
                                              
                                                <h3 class="title"><a href="@Slider1.webLog_Label.Url_Meta">@Slider1.webLog_Label.Title_Meta</a></h3>
                                                <div class="post-meta-wrapper">
                                                    <div class="post-meta">

                                                        <div class="content">                                                           
                                                            <ul class="post-meta-list">
                                                                <li>@Slider1.webLog_Label.LastUpdateDate.ToShamsi()</li>
                                                            </ul>
                                                        </div>
                                                    </div>

                                                </div>
                                            </div>
                                        </div>
                                    }

                                </div>
                                <!-- Start Post Grid  -->
                            </div>
                            <div class="col-xl-5 col-lg-5 col-md-12 col-12">
                                <div class="row">
                                    <div class="col-xl-12 col-lg-12 col-md-6 col-12">
                                        <!-- Start Post Grid  -->
                                        <div class="content-block post-grid mt--30">
                                            <div class="post-thumbnail">
                                                <a href="@Slider2.WebLog_Slider_Link" title="@Slider2.WebLog_Slider_Title">
                                                    <img src="@Slider2.WebLog_Slider_Image" alt="@Slider2.WebLog_Slider_Title">
                                                </a>
                                            </div>
                                            @if (Slider2.WebLog_Slider_Blog_IsActive)
                                            {                                           
                                                <div class="post-grid-content">
                                                    <div class="post-content">
                                                        <div class="post-cat">
                                                            <div class="post-cat-list">
                                                                <a class="hover-flip-item-wrapper" href="@Slider2.webLog.Url_Meta">
                                                                    <span class="hover-flip-item">
                                                                        <span data-text="@Slider2.webLog.Title_Meta">@Slider2.webLog.Title_Meta</span>
                                                                    </span>
                                                                </a>
                                                            </div>
                                                        </div>
                                                        <h4 class="title"><a href="@Slider2.webLog.Url_Meta">@Slider2.webLog.Title_Meta</a></h4>
                                                    </div>
                                                </div>
                                            }
                                            else if (Slider2.WebLog_Slider_Label_IsActive)
                                            {
                                                <div class="post-grid-content">
                                                    <div class="post-content">
                                                        <div class="post-cat">
                                                            <div class="post-cat-list">
                                                                <a class="hover-flip-item-wrapper" href="@Slider2.webLog_Label.Url_Meta">
                                                                    <span class="hover-flip-item">
                                                                        <span data-text="@Slider2.webLog_Label.Title_Meta">@Slider2.webLog_Label.Title_Meta</span>
                                                                    </span>
                                                                </a>
                                                            </div>
                                                        </div>
                                                        <h4 class="title"><a href="@Slider2.webLog_Label.Url_Meta">@Slider2.webLog_Label.Title_Meta</a></h4>
                                                    </div>
                                                </div>
                                            }

                                        </div>
                                        <!-- Start Post Grid  -->
                                    </div>
                                    <div class="col-xl-12 col-lg-12 col-md-6 col-12">
                                        <!-- Start Post Grid  -->
                                        <div class="content-block post-grid mt--30">
                                            <div class="post-thumbnail">
                                                <a href="@Slider3.WebLog_Slider_Link" title="@Slider3.WebLog_Slider_Title">
                                                    <img src="@Slider3.WebLog_Slider_Image" alt="@Slider3.WebLog_Slider_Title">
                                                </a>
                                            </div>
                                            @if (Slider3.WebLog_Slider_Blog_IsActive)
                                            {
                                                <div class="post-grid-content">
                                                    <div class="post-content">
                                                        <div class="post-cat">
                                                            <div class="post-cat-list">
                                                                <a class="hover-flip-item-wrapper" href="@Slider3.WebLog_Slider_Link">
                                                                    <span class="hover-flip-item">
                                                                        <span data-text="@Slider3.WebLog_Slider_Title">@Slider3.WebLog_Slider_Title</span>
                                                                    </span>
                                                                </a>
                                                            </div>
                                                        </div>
                                                        <h4 class="title"><a href="@Slider3.webLog.Url_Meta" title="@Slider3.webLog.Weblog_Title_One">@Slider3.webLog.Title_Meta </a></h4>
                                                    </div>
                                                </div>
                                            }
                                            else if (Slider2.WebLog_Slider_Label_IsActive)
                                            {
                                                <div class="post-grid-content">
                                                    <div class="post-content">
                                                        <div class="post-cat">
                                                            <div class="post-cat-list">
                                                                <a class="hover-flip-item-wrapper" href="@Slider3.WebLog_Slider_Link">
                                                                    <span class="hover-flip-item">
                                                                        <span data-text="@Slider3.WebLog_Slider_Title">@Slider3.WebLog_Slider_Title</span>
                                                                    </span>
                                                                </a>
                                                            </div>
                                                        </div>
                                                        <h4 class="title"><a href="@Slider3.webLog_Label.Url_Meta" title="@Slider3.webLog_Label.WebLog_Label_Title_One">@Slider3.webLog_Label.Title_Meta </a></h4>
                                                    </div>
                                                </div>
                                            }

                                        </div>
                                        <!-- Start Post Grid  -->
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- End Single Tab Content  -->
             

                </div>
                <!-- End Tab Content  -->
            </div>
        </div>
    </div>
</div>