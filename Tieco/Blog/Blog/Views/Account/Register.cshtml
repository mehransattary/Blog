@model Data.ViewModel.RegisterViewModel

@{
    ViewData["Title"] = "ثبت نام";
}



<section class="container-fluid pt-5 pb-4 pb-lg-0">

    <section class="text-center text-white m-3">

        <div id="login" class="box shadow text-center border-top-0 p-lg-4 p-3">
            <img src="/assets/Images/Svg/user.svg" style="width:45px" />
            <h5 class="IRANSansWeb_Bold text-grad pt-3">ثبت نام در سایت</h5>
            <form asp-action="Register" asp-controller="Account" class="contact__form" method="post">
                <p class="text-dark mb-3">لطفا جهت عضویت ، اطلاعات زیر را وارد نمایید</p>

                <div class="contact__form-div">
                    <input type="text" placeholder="ایمیل خود را وارد کنید" class="form-control mb-3"  asp-for="Email">

                </div>

                <div class="contact__form-div">
                    <input type="password" placeholder="رمز عبور خود را وارد کنید" class="form-control mb-3" asp-for="Password">

                </div>

                <div class="contact__form-div">
                    <input type="password" placeholder="تکرار رمز عبور خود را وارد کنید" class="form-control mb-3" asp-for="ConfirmPassword">

                </div>
                <div asp-validation-summary="All" class="contact__title"></div>

                <button class="btn btn-grad text-white btn-block mb-3 py-2" type="submit">عضویت در سایت<i class="fa fa-chevron-left mr-2"></i></button>

            </form>
           

        </div>
    </section>


</section>
