
@model IPagedList<WebLog>
@{

    var blogBlogs = ViewData["groupBlogs"] as WebLog_Group;
    ViewData["Title"] = blogBlogs.TitleEnglish_Meta;
    ViewData["keywords"] = ViewBag.Keyword_Meta;
    ViewData["description"] = ViewBag.Desc_Meta;
    ViewData["ogurl"] = "https://tie.co.ir/group/" + ViewBag.Url_Meta;
    ViewData["imageOg"] = "https://tie.co.ir/WebLog_Group" + ViewBag.Image_Meta;
}

<div class="axil-breadcrumb-area breadcrumb-style-1 bg-color-grey" style="background-image:url(@blogBlogs.WebLog_Group_Image);background-size:cover;background-position:center">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="inner text-right">
                    <h1 class="page-title">
                        @blogBlogs.WebLog_Group_Title_One
                    </h1>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="axil-post-list-area axil-section-gap bg-color-white">
    <div class="container">
        <div class="row">
            <div class="col-12">
                @Html.PagedListPager(Model, page => Url.Action("ShowGroupBlog", "Article", new { currentPage = page, url = blogBlogs.Url_Meta }),
                 new PagedListRenderOptionsBase
                 {
                     DisplayLinkToIndividualPages = true,
                     DisplayPageCountAndCurrentLocation = false,
                     MaximumPageNumbersToDisplay = 5,
                     DisplayLinkToNextPage = PagedListDisplayMode.Never,
                     DisplayLinkToPreviousPage = PagedListDisplayMode.Never,

                 })
            </div>
            <div class="col-12">
                <ul class="nav justify-content-center ">
                    <li class="nav-item">
                        <a href="/" class="nav-link text-secondary">
                            خانه
                            <span class="fa fa-long-arrow-left text-danger"></span>

                        </a>
                    </li>
                   
                    <li class="nav-item">
                        <a href="/category/@ViewBag.categoryUrl" class="nav-link text-secondary">
                            @ViewBag.categoryName
                            <span class="fa fa-long-arrow-left text-danger"></span>

                        </a>
                    </li>
              
                    <li class="nav-item">
                        <a href="/group/@ViewBag.groupUrl" class="nav-link active">
                            @ViewBag.groupName
                        </a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="row">

            <div class="col-lg-8 col-xl-8 offset-lg-2 offset-xl-2">






                @foreach (var blog in Model)
                {

                    <!-- Start Post List  -->
                    <div class="content-block post-list-view mt--30">
                        <div class="post-thumbnail">
                            <a href="/blog/@blog.Url_Meta" title="@blog.Weblog_Title_Two">
                                <img src="@blog.Weblog_Thumbnail_Image" alt="@blog.Weblog_Title_One">
                            </a>
                        </div>
                        <div class="post-content">
                            <div class="post-cat">
                                <div class="post-cat-list">
                                    <a class="hover-flip-item-wrapper" href="/blog/@blog.Url_Meta" title="@blog.Weblog_Title_One">
                                        <span class="hover-flip-item">
                                            <span data-text="@blog.Weblog_Title_One">@blog.Weblog_Title_One</span>
                                        </span>
                                    </a>
                                </div>
                            </div>
               
                            <p class="title" style="text-align:justify">
                                @blog.Weblog_Short_Description

                            </p>
                            <div class="post-meta-wrapper">
                                <div class="post-meta">
                                    <div class="content">
                                        <h6 class="post-author-name">
                                            <a class="hover-flip-item-wrapper" href="#">
                                                <span class="hover-flip-item">
                                                    <span data-text="@blog.Weblog_Writer">  @blog.Weblog_Writer</span>
                                                </span>
                                            </a>
                                        </h6>
                                        <ul class="post-meta-list">
                                            <li>@blog.LastUpdateDate.ToShamsi()</li>
                                        </ul>

                                    </div>

                                </div>
                                <a class="btn btn-outline-primary w-25" href="/blog/@blog.Url_Meta">
                                    جزئیات
                                </a>
                            </div>
                        </div>
                    </div>
                    <!-- End Post List  -->

                }



            </div>

        </div>
        <div class="row">
            <div class="col-12">
                @Html.PagedListPager(Model, page => Url.Action("ShowGroupBlog", "Article", new { currentPage = page, url = blogBlogs.Url_Meta }),
                 new PagedListRenderOptionsBase
                 {
                     DisplayLinkToIndividualPages = true,
                     DisplayPageCountAndCurrentLocation = false,
                     MaximumPageNumbersToDisplay = 5,
                     DisplayLinkToNextPage = PagedListDisplayMode.Never,
                     DisplayLinkToPreviousPage = PagedListDisplayMode.Never,

                 })
            </div>
        </div>
    </div>
</div>